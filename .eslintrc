{
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "env": {
      "browser": true,
      "node": true
  },
  "globals": {
      "nodecg": "writable",
      "NodeCG": "writable"
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "indent": ["error", 2],
      "object-curly-spacing": ["error", "always"],
      "capitalized-comments": ["error", "never"]
  }
}